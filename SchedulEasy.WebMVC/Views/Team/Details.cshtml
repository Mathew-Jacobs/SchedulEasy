@model SchedulEasy.Models.TeamDetail

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>TeamDetail</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TeamID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TeamID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Members)
        </dt>
        <dd></dd>
        <dt></dt>
        <dd>
            @foreach (var item in Model.Members)
            {
                if (item == Model.OwnerName)
                {
                    if (item == User.Identity.Name)
                    {
                        <div>
                            <p>@item @Html.ActionLink("Update Privacy", "Edit", "TeamData", new { id = @item, teamID = Model.TeamID }, null)</p>
                        </div>
                    }
                    else
                    {
                        <div>
                            <p>@item</p>
                        </div>
                    }
                }
                else
                {
                    if (item == User.Identity.Name)
                    {
                        <div>
                            <p>@item @Html.ActionLink("Update Privacy", "Edit", "TeamData", new { id = @item, teamID = Model.TeamID }, null) | @Html.ActionLink("Remove", "Delete", "TeamData", new { id = @item, teamID = Model.TeamID }, null)</p>
                        </div>
                    }
                    else
                    {
                        <div>
                            <p>@item @Html.ActionLink("Remove", "Delete", "TeamData", new { id = @item, teamID = Model.TeamID }, null)</p>
                        </div>
                    }
                }
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.TeamID }) |
    @Html.ActionLink("Back to List", "Index")
</p>