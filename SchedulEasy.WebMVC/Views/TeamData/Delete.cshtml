@model SchedulEasy.Models.TeamDataDetail

@{
    ViewBag.Title = "Delete";
}


<div class="container body-content">
    <div class="contentBox">
        @if (Model.UserName == User.Identity.Name)
        {
            <h2>Leave</h2>
            <h3>Are you sure you want to leave this group?</h3>

            using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Leave" class="btn btn-default" /> |
                    @Html.ActionLink("Cancel", "Index", "Team")
                </div>
            }

        }
        else
        {
            <h2>Remove</h2>

            <h3>Are you sure you want to remove this user?</h3>
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.UserName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.UserName)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Remove" class="btn btn-default" /> |
                        @Html.ActionLink("Cancel", "Index", "Team")
                    </div>
                }
            </div>
        }
    </div>
</div>