@model SchedulEasy.Models.TeamDataEdit

@{
    ViewBag.Title = "Edit";
}

<div class="container body-content">

    <div class="contentBox">
        <h2>Privacy</h2>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(model => model.TeamDataID)

                <div class="form-group">
                    By checking this box you are allowing the other members of this group to see the days that you are busy.
                    <div class="col-md-12">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.Private, new { htmlAttributes = new { @checked = Model.Private, @style = "margin-left:-5px;" } })
                            @Html.ValidationMessageFor(model => model.Private, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
        <div>
            @Html.ActionLink("Back to Groups", "Index", "Team")
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
